  //broadcast a read + write filter lookup request to all L1s except for the requestor
  action(a_checkL1ReadWriteFiltersExceptRequestor, "rwr", desc="Broadcast a Read + Write Filter lookup request"){
    assert(xact_mgr.config_allowReadSetL2CacheEvictions() ||
           xact_mgr.config_allowWriteSetL2CacheEvictions());
    peek(L1RequestL2Network_in, RequestMsg) {
      enqueue(L1RequestL2Network_out, RequestMsg, L2cache.getTagLatency()) {
        out_msg.addr := address;
        out_msg.Type := CoherenceRequestType:CHECK_READ_WRITE_SET;
        // make L1 forward responses to requestor
        out_msg.Requestor := in_msg.Requestor;
        out_msg.Destination.broadcast(MachineType:L1Cache);
        // don't broadcast to requestor
        out_msg.Destination.remove(in_msg.Requestor);
        out_msg.MessageSize := MessageSizeType:Response_Control;
	out_msg.Transactional := in_msg.Transactional;
  out_msg.transactionalPriority := in_msg.transactionalPriority;
  out_msg.swTransactionalPriority := in_msg.swTransactionalPriority;
        // Do not pass along timestamp of requestor to prevent false
        // aborts while reconstructing sharing code (shouldNackStore
        // called for L1_GETS)
        out_msg.Timestamp := curCycle();
      }
    }
  }

